@model AdmissionSystem.Model.Faculty

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center">Delete</h1>

<h3>Are you sure you want to delete this faculty?</h3>
<div>
    <h4>Faculty</h4>
    <hr />


    <form asp-action="Delete">

        @if (ViewBag.linkedFaculty != null)
        {
            <div class="alert alert-danger border-danger" role="alert">
                @ViewBag.linkedFaculty
            </div>
        }
        @if (ViewBag.freeFaculty != null)
        {
            <div class="alert alert-success border-success " role="alert">
                @ViewBag.freeFaculty
            </div>
        }
        @if (ViewBag.WasDeleted != null) { 
    <div class="alert alert-warning border-warning " role="alert">
        @ViewBag.WasDeleted
    </div>
        }
        <dl class="row">
            <dt class="col-sm-2">
                Name
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Faculty_name)
            </dd>
        </dl>
        <hr />
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
    </form>
</div>
