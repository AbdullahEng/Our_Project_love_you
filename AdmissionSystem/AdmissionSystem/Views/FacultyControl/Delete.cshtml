@model AdmissionSystem.Model.Faculty
@using System.Globalization
@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer localizer

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout_For_Admin_Dashboard.cshtml";
}

<h1 class="text-center">@localizer["Delete"]</h1>
<hr />
<h3>@localizer["Are you sure you want to delete this faculty?"]</h3>
<p>

    <br />



</p>
<div>
    @*<h4>Faculty</h4>*@



    <form asp-action="Delete">
        @*English*@
        @if (ViewBag.linkedFaculty != null)
        {
            <div class="alert alert-danger border-danger" role="alert">
                @ViewBag.linkedFaculty
            </div>
        }
        @if (ViewBag.freeFaculty != null)
        {
            <div class="alert alert-success border-success " role="alert">
                @ViewBag.freeFaculty
            </div>
        }
        @if (ViewBag.WasDeleted != null)
        {
            <div class="alert alert-warning border-warning " role="alert">
                @ViewBag.WasDeleted
            </div>
        }

        @*Arabic*@


        @*@if (ViewBag.linkedFacultyArabic != null)
        {
            <div class="alert alert-danger border-danger" role="alert">
                @ViewBag.linkedFacultyArabic
            </div>
        }
        @if (ViewBag.freeFacultyArabic != null)
        {
            <div class="alert alert-success border-success " role="alert">
                @ViewBag.freeFacultyArabic
            </div>
        }
        @if (ViewBag.WasDeletedArabic != null)
        {
            <div class="alert alert-warning border-warning " role="alert">
                @ViewBag.WasDeletedArabic
            </div>
        }*@



        <dl class="row">
            <dt class="col-sm-2">
               @localizer["Name"] 
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Faculty_name)
            </dd>
        </dl>
        <hr />
        <input type="hidden" asp-for="id" />
        <input type="submit" value="@localizer["Delete"]" class="btn btn-outline-danger" />
        <a asp-action="Index" class="btn btn-secondary">@localizer["Back to List"]</a>
    </form>
</div>
