@model AdmissionSystem.Model.Faculty

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center">Create faculty</h1>

<hr/>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @if (ViewBag.StatusMessageFails != null)
            {
                <div class="alert alert-danger border-danger" role="alert">
                    @ViewBag.StatusMessageFails
                </div>
            }
            @if (ViewBag.StatusMessageSuccess != null)
            {
                <div class="alert alert-success border-success " role="alert">
                    @ViewBag.StatusMessageSuccess
                </div>



            }

            <div class="form-group">
                <label  class="control-label"> Name</label>
                <input asp-for="Faculty_name" class="form-control "  required="required"/>
                <span asp-validation-for="Faculty_name" class="text-danger"></span>
            </div>

        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-outline-warning" />
        </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

