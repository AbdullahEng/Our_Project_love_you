            <div class="form-group">
                <label asp-for="Type_of_admission_eligibilty" class="control-label"></label>
                <input asp-for="Type_of_admission_eligibilty" class="form-control" />
                <span asp-validation-for="Type_of_admission_eligibilty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Begaining_date_of_the_process" class="control-label"></label>
                <input asp-for="Begaining_date_of_the_process" type="date" class="form-control "
                       min="@DateTime.Now.ToString("yyyy-MM-dd")" max="@DateTime.Now.AddYears(2).ToString("yyyy-MM-dd")" />
                <span asp-validation-for="Begaining_date_of_the_process" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="semester_no" class="control-label"></label>
                <select asp-for="semester_no" class="form-control">
                    <option value="1">First semester</option>
                    <option value="2">Secound semester </option>
                    <option value="3">Summer semester</option>
                </select>
                <span asp-validation-for="semester_no" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="semester_Date" class="control-label"></label>
                <input asp-for="semester_Date" class="form-control" type="date"
                       min="@DateTime.Now.AddYears(-1).ToString("yyyy-MM-dd")" max="@DateTime.Now.AddYears(2).ToString("yyyy-MM-dd")" />

                <span asp-validation-for="semester_Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Number_Student" class="control-label"></label>
                <input asp-for="Number_Student" class="form-control" />
                <span asp-validation-for="Number_Student" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-outline-primary" />
            </div>

            <div>
