                @Html.DisplayFor(modelItem => item.studnet_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Accepted_wish)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cuntry)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.The_rate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status_of_Admission_elgibility)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.beganing_date_of_Admission)
            </td>
