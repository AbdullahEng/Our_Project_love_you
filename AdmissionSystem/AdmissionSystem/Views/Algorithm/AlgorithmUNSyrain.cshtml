            </th>
            <th>
                <label class="control-label">country</label>
            </th>
            <th>
                <label class="control-label"> Rate</label>
            </th>
            <th>
                <label class="control-label">Status of Admission elgibility</label>
            </th>
            <th>
                <label class="control-label">begining date of Admission</label>
            </th>
            <th>
                <label class="control-label">semester NO</label>
            </th>
            @*<th>
            @Html.DisplayNameFor(model => model.)
        </th>*@
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Accinfo)
        {
        <tr>
